<div class="ui container">
<h1 class="ui center aligned header">Welcome to Message Me App</h1>


<h2 class="ui center aligned icon header">
  <i class="circular orange power icon"></i>
  Sign up 
</h2>

<%= form_with model: @profile, local: true, data: { turbo: false }, class: "ui form" do |f| %>
  <div class="ui placeholder segment">
  <div class="ui very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
        <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password%>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "password"%>
            <i class="lock icon"></i>
          </div>

        </div>
        <%= f.submit "Sign up", class: "ui orange submit button"%>
      </div>
    </div>
  </div>
</div>
</div>
<%end%>