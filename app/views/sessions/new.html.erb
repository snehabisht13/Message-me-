<div class="ui container">
<h1 class="ui center aligned header">Welcome to Message Me App</h1>


<h2 class="ui center aligned icon header">
  <i class="circular orange power icon"></i>
  Log in 
</h2>

<%= form_with url: login_path, local:true, data: { turbo: false }, class: "ui form" do |f| %>
<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
        <div class="field">
          <%= f.label :username%>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username"%>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password%>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password"%>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui orange submit button"%>
      </div>
    </div>
    <div class="middle aligned column">
      <%= link_to "Sign up", new_profile_path, class: "ui orange big button"%>
      
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
</div>
<%end%>


